  <div class="banner" style="background-image: url(<%= asset_path('banner.jpg') %>)">
    <div id="banner-text">
      <div class="container">
        <div id="banner-inner-text">
          <h1>Stop worrying about your meals</h1>
          <h1>It takes one click</h1>
          <%= form_tag weekly_menu_path, method: :get do %>
            <div class="search-form" id="search-data" data-ingredients="<%= @ingredients.to_json %>">
              <div id="ingredient-set"></div>
              <%= text_field_tag :q, nil,
                autocomplete: :on,
                class: "form-control search-input",
                placeholder: "Search by ingredients..." %>
              <input type="hidden" id="ingredient-set-input" name="qq">
              <%= submit_tag "Create my weekly menu", class: "btn btn-lg btn-info mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="why-menuet">
    <div class="container">
      <h2>Why Menuet?</h2>
      <div id="why-menuet-reasons">
        <div>
          <i class="fas fa-hamburger"></i>
          <h4>Organize your weekly meal plan without a headache</h4>
        </div>
        <div>
          <i class="fas fa-pizza-slice"></i>
          <h4>We choose among thousands of recipes to fit your taste</h4>
        </div>
        <div>
          <i class="fas fa-ice-cream"></i>
          <h4>Generate your personalized menus if you subscribe</h4>
        </div>
      </div>
      <h6>Tell me more about subscription</h6>
    </div>
  </div>
