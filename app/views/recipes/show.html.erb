<div class="container">
  <div class="row">
    <div class ="image-row">
      <div class="col-xs-12 col-sm-6">
        <img src=" <%= @recipe.img_url %>" alt="Card image cap">
      </div>

      <p><b>Title:></b> <%= @recipe.title %></p>
      <p><b>Time Require:></b> <%= @recipe.time %> mins</p>
      <p><b>Ingredients:</b>
       <% @recipe.ingredients_list.each do |ingredient| %>
         <li>
          <%= ingredient %>
         </li>
      </p>
      <% end %>
        <p><b>Instructions:></b> <%= @recipe.instructions %></p>
    </div>
  </div>
</div>
